
apiVersion: apps/v1
kind: Deployment
metadata:
  name: retail-backend
  namespace: {{ namespace }}
spec:
  replicas: 2
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
    spec:
      imagePullSecrets:
        - name: regcred
      containers:
        - name: backend
          image: {{ images.backend }}
          envFrom:
            - secretRef:
                name: postgres-secret
